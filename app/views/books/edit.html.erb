<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br><%= f.submit 'Update Books' %>
<% end %>

<%= link_to('Show', books_path(@book)) %>
